{% extends 'layout_log.html.twig' %}

{% block content %}
<div class="container-fluid_register" id="bloc_login">
    <div class="form_register" id="login_bloc_">
        <h1 class="mylogin">Login</h1>
        {% if error %}
        {{ error }}
        {% endif %}
        <form method="POST">
            <div class="form-group">
                <label for="inputPassword" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10 col-md-12 col-sm-12">
                    <input type="email" class="form-control" id="inputPassword" placeholder="Your Email Here"
                        name="email" required>
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10 col-md-12 col-sm-12">
                    <input type="password" class="form-control" id="inputPassword" placeholder="Your Password Here"
                        name="password" required>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" name="login" class="btn btn-outline-dark_ btn_login"
                    value="login">Connect</button>
                <a href="/Users/register" class="btn btn-outline-dark_ btn_login"
                >Register</a>
            </div>
        </form>
    </div>
</div>

{% endblock %}