<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}KittyExpress{% endblock %}</title>
    <link rel="icon" href="/assets/images/anonymous-tab.png">


    {% block stylesheet %}{% endblock %}
    <script src="https://kit.fontawesome.com/12c728ad22.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/css/style.css">
</head>

<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-dark pt-3 mb-3 bg-transparent">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand pl-3" href="/Shop/indexShop">KittyExpress</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    {% if session.role == 2 %}
                        <li class="nav-item pl-3">
                            <a class="nav-link" href="/admin/additem">Admin</a>
                        </li>
                    {% elseif session.role == 1 %}
                        <li class="nav-item pl-3">
                            <a class="nav-link" href="/users/profile/{{ session.id }}">Profile</a>
                        </li>
                        <li class="nav-item pl-3">
                            <a class="nav-link" href="/missions/cart/{{ session.id }}">Missions</a>
                        </li>
                        <li class="nav-item pl-3">
                            <a class="nav-link" href="/users/contact">Contact</a>
                        </li>
                    {% endif %}
                </ul>
                <form method="POST" class="form-inline  my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" name="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline my-2 my-sm-0 searchBtn" type="submit">Search</button>
                </form>
                <ul class="navbar-nav">
                    <li class="nav-item pl-3">
                        <a class="nav-link logoutBtn" href="/login/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    {% block content %}{% endblock %}
    <div class="footer">
        <div class="container-fluid">
            <div class="navbar navbar-expand-lg bg-transparent footerBox">
                <ul class="navbar-nav footerNav">
                    <li class="nav-item pl-3">
                        <a class="nav-link" href="https://wildcodeschool.fr" title="About Us" target="_blank">About Us</a>
                    </li>
                    <li class="nav-item pl-3">
                        <a class="nav-link" href="http://localhost:8000/users/contact" title="Contact" target="_blank">Contact</a>
                    </li>
                    <li class="nav-item nav-link disabled pl-3">© 2020 made by Anaïs, Elhadj, Johnny, Sandrine, Sten</li>
                </ul>
            </div>
        </div>
    </div>
{% block javascript %}{% endblock %}
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>


